<div class="text-center">
    <button class="btn btn-primary mt-5" id="btnToggleFormArticle" onclick="toggleArticleForm()"></button>
</div>

<form action="/article" method="post" class="card widthCardUser m-auto mt-3 p-3" id="formArticle">
    <label for="title" class="form-label">Titre</label>
    <input type="text" class="form-control" name="title" id="title">

    <br>

    <label for="description" class="form-label">Description</label>
    <input type="text" class="form-control" name="description" id="description">

    <br>

    <label for="author" class="form-label">ID Auteur (actuel)</label>
    <input type="text" class="form-control" value="<%= user._id %>" name="author" id="author">

    <button class="btn btn-success mt-3">Créer</button>
</form>

<div class="card widthCardUser m-auto mt-3">
    <div class="card-body">
        <p class="card-text">Username: <%= user.username %>
        </p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Email: <%= user.email %>
        </li>
        <li class="list-group-item">Age: <%= user.age %>
        </li>
    </ul>

    <div class="card-body text-center">
        <button class="btn btn-primary" id="btnToggleArticlesAssocies" onclick="toggleArticlesAssocies()">Afficher les articles associés</button>
    </div>
</div>

<div id="articlesAssocies">
    <hr class="mt-5">
    <div class="d-flex justify-content-around align-items-center flex-wrap">

        <% articles.forEach(article => { %>
            <div class="mt-3 card unArticle">
                <div class="card-body text-center">
                    <h5 class="card-title mb-0"><%= article.title %></h5>
                    <small class="text-muted"># <%= article._id %></small>
                    <hr>
                    <div class="d-flex justify-content-evenly">
                        <a href="/article/<%= article._id %>" class="btn btn-secondary">Voir l'article</a>
                        <a href="/deleteArticle/<%= article._id %>" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
        <% }) %>
        
    </div>
</div>

<script src="/javascript/user.js"></script>