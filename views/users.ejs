<div class="container">
    <form action="/user" method="post" class="mt-5 p-3 border">
        <h2 class="text-center">Créer un user</h2>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" id="username" autofocus>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" name="email" id="email">
        </div>

        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" name="age" id="age" step="1" min="18" max="80">
        </div>

        <button type="submit" class="btn btn-primary">Créer</button>
    </form>

    <% if (Object.entries(userMap).length === 0) { %>
        <h2 class="mt-5 text-center">Aucun user</h2>
    <% } else { %>
    <table class="table table-bordered border-dark mt-5">
        <thead class="table-dark text-center">
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Age</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let key in userMap) { %>
                <tr class="text-center">
                    <th scope="row"><small class="text-muted"><%= userMap[key]._id %></small></th>
                    <td><%= userMap[key].username %></td>
                    <td><%= userMap[key].email %></td>
                    <td><%= userMap[key].age %></td>
                    <td class="text-center">
                        <a class="btn btn-primary" href="/user/<%= userMap[key]._id %>"><i class="fa-solid fa-magnifying-glass"></i></a>
                        <a class="btn btn-danger" href="/deleteUser/<%= userMap[key]._id %>"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <% } %>
</div>